{
    "manifest_version": 3,
    "name": "LinkedIn AI Copilot",
    "version": "1.0.0",
    "description": "Personal AI-powered LinkedIn assistant â€“ Generate smart comments and analyze job postings.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "http://localhost:8000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "LinkedIn AI Copilot",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}